import os ;
local HOME = [ os.environ HOME ] ;

use-project /libea : ../ealib/libea ;

exe gls :
    src/main.cpp
    /libea//libea
    /libea//libea_runner
    : <include>./include <link>static
    ;

install dist : gls : <location>$(HOME)/bin ;


