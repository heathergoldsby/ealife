import os ;
local HOME = [ os.environ HOME ] ;

use-project /libea : ../ealib/libea ;

exe gls :
    src/main.cpp
    /libea//libea
    /libea//libea_runner
    : <include>./include <link>static
    ;

install dist : gls : <location>$(HOME)/bin ;

exe gls_ramped :
    src/gls_ramped.cpp
    /libea//libea
    /libea//libea_runner
    : <include>./include <link>static
    ;

install dist : gls_ramped : <location>$(HOME)/bin ;

exe gls_control :
    src/gls_random_mutation_control.cpp
    /libea//libea
    /libea//libea_runner
    : <include>./include <link>static
    ;

install dist : gls_control : <location>$(HOME)/bin ;


exe ts :
    src/ts.cpp
    /libea//libea
    /libea//libea_runner
    : <include>./include <link>static
    ;

install dist : ts : <location>$(HOME)/bin ;
